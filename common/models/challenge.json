{
  "name": "challenge",
  "plural": "challenges",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "challenger": {
      "type": {
        "userId": {
          "type": "string",
          "required": true
        },
        "identities": [ "userIdentity" ],
        "score": {
          "type": "number",
          "required": true,
          "default": null
        }
      }
    },
    "challenged": {
      "type": {
        "userId": {
          "type": "string",
          "required": true
        },
        "identities": [ "userIdentity" ],
        "score": {
          "type": "number",
          "required": true,
          "default": null
        }
      }
    },
    "ramenId" : {
      "type": "string",
      "required": true,
      "default": "spicy_chicken"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "hidden": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "winner": {
      "type": "string"
    },
    "created": {
      "type": "date",
      "defaultFn": "now"
    },
    "modified": {
      "type": "date"
    }
  },
  "hidden": ["userId"],
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
